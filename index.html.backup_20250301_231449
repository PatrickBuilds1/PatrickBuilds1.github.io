const API_KEY = "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";
